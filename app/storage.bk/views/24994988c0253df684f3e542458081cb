	$userHome = @Config::get('app.url').'store-'.$dataStore->id;
}
function rm($article, $char) {
	$article = preg_replace ( "/<img[^>]+\>/i", "(image) ", $article );
	if (strlen ( $article ) > $char) {
		return substr ( $article, 0, $char ) . '...';
	} else
		return $article;
}
